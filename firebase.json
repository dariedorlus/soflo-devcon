{
  "functions": [
    {
      "port": 5001,
      "runtime": "nodejs19",
      "engines": {"node": "19"},
      "source": "api",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "port": 5002,
    "public": "/public",
    "rewrites": [
      {
        "source":"**/api/**",
        "function":"api"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
