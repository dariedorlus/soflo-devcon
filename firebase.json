{
  "hosting": {
    "public": "/public",
    "rewrites": [
      {
        "source":"api/**",
        "function":"api"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": [
    {
      "main": "index.js",
      "runtime": "nodejs16",
      "engines": {"node": "16"},
      "source": "api",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}